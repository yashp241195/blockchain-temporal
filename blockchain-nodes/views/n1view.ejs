<!DOCTYPE html>
<html>
<head>
  <title>blockchain.workoso.in</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }

    h1 {
      text-align: center;
    }

    table {
      border-collapse: collapse;
      margin-bottom: 20px;
      width: 100%;
    }

    th, td {
      padding: 8px;
      border: 1px solid #ddd;
      text-align: left;
      word-break: break-word;
    }

    th {
      background-color: #f2f2f2;
      font-weight: bold;
    }

    .sub-table {
      margin: 10px 0;
    }

    @media only screen and (max-width: 600px) {
      table {
        font-size: 14px;
      }

      th, td {
        display: block;
        width: 100%;
      }

      th {
        text-align: left;
        margin-bottom: 0px;
      }

      td {
        margin-bottom: 0px;
      }

      td:before {
        content: attr(data-label);
        font-weight: bold;
        display: inline-block;
        width: 10px;
      }
    }
  </style>
</head>
<body>
  <table>
    <% Object.keys(data).forEach(key => { %>
      <% if (typeof data[key] === 'object' && !Array.isArray(data[key])) { %>
        <tr>
          <th colspan="2"><%= key %></th>
        </tr>
        <% Object.keys(data[key]).forEach(innerKey => { %>
          <tr>
            <td><strong><%= innerKey %>:</strong></td>
            <td><%= data[key][innerKey] %></td>
          </tr>
        <% }); %>
      <% } else { %>
        <tr>
          <th><%= key %></th>
          <% if (key == 'previousHash') { %>
            <td><a href="<%= data[key] %>"><%= data[key] %></a></td>
          <% } else { %>
            <td><%= data[key]%></td>
          <% } %>
        </tr>
      <% } %>
    <% }); %>
  </table>

</body>
</html>
